<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linear_layout_photo_name"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_weight="50"
            android:paddingBottom="20dp">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/appCompatImageButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/image_profile_photo" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:paddingTop="6dp"
                android:text="@string/btn_change_photo"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:orientation="vertical">

            <TextView
                style="@style/TextStyle13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_your_lastname" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_text_lastname"
                style="@style/TextStyle8.EditTextBottomLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edit_text_hint_lastname"
                android:paddingStart="0dp"
                android:paddingTop="13dp" />

            <TextView
                style="@style/TextStyle13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/tv_your_name" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_text_name"
                style="@style/TextStyle8.EditTextBottomLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edit_text_hint_name"
                android:paddingStart="0dp"
                android:paddingTop="13dp"
                android:paddingBottom="14dp"
                android:text="Денис" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:id="@+id/separation_line_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cool_grey"
        app:layout_constraintTop_toBottomOf="@id/linear_layout_photo_name" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/separation_line_1">

        <TextView
            style="@style/TextStyle13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_birthday" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edit_text_birthday"
            style="@style/TextStyle8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/icon_calendar"
            android:hint="@string/edit_text_hint_birthday"
            android:paddingStart="0dp"
            android:paddingTop="13dp"
            android:text="01 февраля 1980" />

        <TextView
            style="@style/TextStyle13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="@string/tv_fulfill_circle_of_action" />

        <androidx.appcompat.widget.AppCompatEditText
            style="@style/TextStyle8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingStart="0dp"
            android:paddingTop="13dp"
            android:text="01 февраля 1980" />

        <TextView
            style="@style/TextStyle13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="@string/tv_password" />

        <androidx.appcompat.widget.AppCompatEditText
            style="@style/TextStyle8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/icon_eye_open"
            android:inputType="textPassword"
            android:paddingStart="0dp"
            android:paddingTop="13dp"
            android:text="12345678" />

        <TextView
            style="@style/TextStyle13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="@string/tv_email" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edit_text_email"
            style="@style/TextStyle8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_text_hint_email"
            android:paddingStart="0dp"
            android:paddingTop="13dp"
            android:text="d.konstantinov@dk.com" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>


